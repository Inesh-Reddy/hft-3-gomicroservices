{
  "name": "go-services",
  "scripts": {
    "dev:market-service": "go build -o ./bin/market-service ./market-service && go run ./market-service",
    "dev:ticker-service": "go build -o ./bin/ticker-service ./ticker-service && go run ./ticker-service",
    "dev:trade-service": "go build -o ./bin/trade-service ./trade-service && go run ./trade-service",
    "dev:orderbook-service": "go build -o ./bin/orderbook-service ./orderbook-service && go run ./orderbook-service",
    "dev": "pnpm run dev:ticker-service",
    "build:market-service": "go build -o ./bin/market-service ./market-service",
    "build:ticker-service": "go build -o ./bin/ticker-service ./ticker-service",
    "build:trade-service": "go build -o ./bin/trade-service ./trade-service",
    "build:orderbook-service": "go build -o ./bin/orderbook-service ./orderbook-service",
    "build": "pnpm run build:ticker-service"
  }
